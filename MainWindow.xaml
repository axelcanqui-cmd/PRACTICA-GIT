<Window x:Class="Proy_Fin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Veterinaria" Height="350" Width="400" 
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="INICIAR SESIÓN" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Usuario (admin):"/>
            <TextBox x:Name="txtUser" Margin="0,0,0,10" Height="25"/>
            <TextBlock Text="Contraseña (1234):"/>
            <PasswordBox x:Name="txtPass" Margin="0,0,0,20" Height="25"/>
            <Button Content="INGRESAR" Click="btnIngresar_Click" Height="35" Background="#007ACC" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>