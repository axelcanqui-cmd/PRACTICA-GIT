<Window x:Class="Proy_Fin.VentanaServicios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Servicios" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <TabControl Margin="10">
        <TabItem Header="DONACIÓN">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Top">
                    <TextBlock Text="Escanea para Donar:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Image Source="/Image.jpg" Height="200" Width="200" Stretch="Uniform"/>
                    <TextBlock Text="Cuenta: 123-456-789" HorizontalAlignment="Center" Margin="0,10"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="Subir Comprobante:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Cargar Imagen..." Click="btnCargar_Click" Margin="0,0,0,10"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Height="200">
                        <Image x:Name="imgComprobante" Stretch="Uniform"/>
                    </Border>
                    <Button Content="Confirmar Donación" Click="btnEnviar_Click" Margin="0,10,0,0" Background="#007ACC" Foreground="White"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="ADOPCIÓN">
            <Grid>
                <TextBlock Text="Lista de adopciones..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>